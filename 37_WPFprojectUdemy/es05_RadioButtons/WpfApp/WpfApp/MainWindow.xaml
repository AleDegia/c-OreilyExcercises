<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Who do you vote for</Label>
        <RadioButton x:Name="radioObama" GroupName="Presidents" FontSize="30" VerticalContentAlignment="Center" Checked="RadioButton_Checked" Unchecked="radioObama_Unchecked">
            <WrapPanel>
                <Image Width="30" Source="https://upload.wikimedia.org/wikipedia/commons/thumb/1/1f/BarackObama2005portrait.jpg/1200px-BarackObama2005portrait.jpg"></Image>
                <Label x:Name="lbObama">Obama</Label>
            </WrapPanel>
        </RadioButton>
        <RadioButton GroupName="Presidents" FontSize="30" IsChecked="True">Trump</RadioButton>
        <RadioButton GroupName="Presidents" FontSize="30" Checked="RadioButton_Checked">McCain</RadioButton>
        <RadioButton GroupName="Presidents" FontSize="30" Checked="RadioButton_Checked">Biden</RadioButton>
    </StackPanel>
</Window>
