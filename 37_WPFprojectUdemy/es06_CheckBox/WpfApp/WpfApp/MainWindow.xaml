<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label FontWeight="Bold">Toppings</Label>
        <CheckBox x:Name="cbParent" IsThreeState="True" Checked="cbParentCheckedChanged" Unchecked="cbParentUncheckedChanged">Select All</CheckBox>
        <CheckBox x:Name="cbCheese" Margin="15,5" VerticalContentAlignment="Center" Checked="cbCheese_Checked" Unchecked="cbCheese_Unchecked" >
            <WrapPanel>
                <Label x:Name="lbCheese">Cheese</Label>
            </WrapPanel>
        </CheckBox>
        <CheckBox x:Name="cbTuna" Margin="15,5" Checked="cbToppingCheckedChanged" >Tuna</CheckBox>
        <CheckBox x:Name="cbPeperoni" Margin="15,5" Checked="cbToppingCheckedChanged" >Peperoni</CheckBox>
    </StackPanel>
</Window>
